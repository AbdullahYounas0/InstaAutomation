# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
MAX_CONTENT_LENGTH=104857600

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# For development, these are set automatically to localhost:3000, 127.0.0.1:3000, etc.
# For production, specify your frontend domain(s)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Maximum age for CORS preflight cache (in seconds)
CORS_MAX_AGE=86400

# Database Configuration (if applicable)
# DATABASE_URL=your-database-url

# Instagram API Configuration (if applicable)
# DEEPSEEK_API_KEY=your-deepseek-api-key

# Logging Configuration
LOG_LEVEL=INFO

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=100MB

# Development vs Production
FLASK_ENV=development
DEBUG=True
