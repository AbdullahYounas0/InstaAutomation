# Production Environment Variables
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production
DEBUG=false

# CORS Settings
CORS_ORIGINS=https://wdyautomation.shop,https://www.wdyautomation.shop

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
