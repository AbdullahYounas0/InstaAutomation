# Browser settings
PLAYWRIGHT_BROWSERS_PATH=/opt/ms-playwright

# SSL/TLS (if using HTTPS directly)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem
